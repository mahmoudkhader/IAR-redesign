{
  "name": "iar",
  "version": "1.0.0",
  "description": "Masjid website concept",
  "main": "server.js",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.0",
    "express": "^4.17.1",
    "highlight.js": "^9.15.8",
    "jsonwebtoken": "^8.5.1",
    "marked": "^0.6.2",
    "mongoose": "^5.6.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "nodemon": "^1.19.1"
  },
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "client-build": "npm run build --prefix client",
    "client-serve": "serve -s client/build",
    "static": "concurrently \"npm start\" \"npm run client\"",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "concurrently \"npm run server\" \"npm run client-build\"",
    "serve": "concurrently \"npm run server\" \"npm run client-serve\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
